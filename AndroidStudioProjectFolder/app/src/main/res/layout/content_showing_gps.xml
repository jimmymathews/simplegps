<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <Space
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <!--<EditText-->
        <!--android:id="@+id/logtext"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="location note" />-->
    <TextView
        android:id="@+id/nomtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple GPS \n http://github.com/jimmymathews/simplegps"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    <TextView
        android:id="@+id/mtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jimmy's simple GPS"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    <Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Button
        android:id="@+id/logaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log current location" />
    <Button
        android:id="@+id/logclear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear log" />
    <EditText
        android:id="@+id/fulllog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log contents"
        android:typeface="monospace"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textMultiLine"/>
    </LinearLayout>
<!--</android.support.constraint.ConstraintLayout>-->
</ScrollView>